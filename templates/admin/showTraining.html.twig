            <thead>
            <tr>
                <th scope="col">Naam</th>
                <th scope="col">Beschrijving</th>
                <th scope="col">Tijd</th>
                <th scope="col">Kosten</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
