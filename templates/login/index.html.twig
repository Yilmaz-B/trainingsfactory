{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

 <div class="pt-5 mt-5">
     <div class="container h-100 pt-5 mt-5 align-items-center">
         <div class="card shadow-lg  o-hidden border-0 my-5">
             <div class="card-body h-100 p-0">
                 <div class="row">
                     <div class="col-lg-6 d-none d-lg-flex">
                         <div class="flex-grow-1 bg-login-image" style="background-image: url('/img/login/image3.jpeg'); background-size: cover; background-repeat: no-repeat"></div>
                     </div>
                     <div class="col-lg-6">
                         <div class="p-5">
                             <div class="text-center">
                                 <h4 class="text-dark mb-4">Welcome Back!</h4>
                             </div>
                             <form action="{{ path('app_login') }}" method="post" class="user">
                                 <div class="mb-3">
                                     <input class="form-control form-control-user" type="text" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Username..." name="_username" value="{{ last_username }}">
                                 </div>
                                 <div class="mb-3">
                                     <input class="form-control form-control-user" type="password" id="password" name="_password" placeholder="Password">
                                 </div>
                                 <button class="btn btn-primary d-block btn-user w-100" type="submit">Login</button>
                                 <hr>
                             </form>
                             <div class="text-center"><a class="small" href="{{ path("app_register") }}">Create an Account!</a></div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>
{% endblock %}
